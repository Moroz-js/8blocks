# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/8blocks?schema=public"

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

# Next.js Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Upload Configuration
UPLOAD_DIR=public/uploads

# SMTP Configuration
# SMTP server hostname (e.g., smtp.gmail.com, smtp.sendgrid.net, smtp.mailgun.org)
SMTP_HOST=smtp.gmail.com
# SMTP server port (587 for TLS, 465 for SSL, 25 for non-secure)
SMTP_PORT=587
# Use secure connection (true for port 465, false for port 587/25)
SMTP_SECURE=false
# SMTP username (usually your email address)
SMTP_USER=your-email@gmail.com
# SMTP password or app-specific password
SMTP_PASSWORD=your-app-password
# Email address to send from
SMTP_FROM_EMAIL=noreply@8blocks.com
# Name to display as sender
SMTP_FROM_NAME=8 Blocks
# Admin email to receive contact form notifications (optional)
SMTP_ADMIN_EMAIL=admin@8blocks.com
